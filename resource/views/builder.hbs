<div class="builder-container">
    <div class="container">
        <div class="card">
            <h3>Upload Files</h3>
            <div class="drop_box">
                <header>
                    <h4>Select File here</h4>
                </header>
                <p>Files Supported: IMG, PNG, JPG</p>
                <input type="file" hidden accept=".img, .jpg, .png" id="fileID" style="display:none;">
                <button class="btn">Choose File</button>
            </div>
        </div>
        <div class="card information">
            <form method="post" action="/">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" name="title" class="form-control" placeholder="Title">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" name="description" class="form-control" id="exampleInputPassword1" placeholder="Description">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" class="btn btn-primary">Save</button> 
            </form>
        </div>
    </div>
    
</div>